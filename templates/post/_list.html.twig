<div class="posts py-5">
    <div class="row">
        {% for post in posts %}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="row g-0">
                    {% if post.smallImage %}
                        <div class="col-md-4">
                            <img class="img-fluid" src="{{asset('uploads/posts/' ~ post.smallImage)}}" alt="{{post.name}}">
                        </div>
                    <div class="col-md-8">
                    {% else %}
                        <div class="col-md-12">
                    {% endif %}
                        <div class="card-body">
                            <a href="{{ post.slug ? path('app_post_show_slug', {'id': post.id, 'slug': post.slug}) : path('app_post_show', {'id': post.id}) }}" class="card-body-cover" aria-label="{{ post.name }}"></a>
                            <h5 class="card-title">{{ post.name }}</h5>
                            {% set rating = averageRatings[post.id] is defined ? averageRatings[post.id] : null %}
                            {% if rating and rating.count > 0 %}
                                <div class="post-list-stars text-accent mb-2" aria-label="Рейтинг: {{ rating.average|number_format(1) }} из 5 ({{ rating.count }} отзывов)">
                                    {% for i in 1..5 %}
                                        {% if rating.average >= i %}
                                            <i class="bi bi-star-fill"></i>
                                        {% elseif rating.average >= i - 0.5 %}
                                            <i class="bi bi-star-half"></i>
                                        {% else %}
                                            <i class="bi bi-star"></i>
                                        {% endif %}
                                    {% endfor %}
                                    <span class="text-muted small ms-1">({{ rating.count }})</span>
                                </div>
                            {% endif %}
                            <div class="categories mb-3">
                                {% for category in post.category %}
                                    <a href="{{ path('app_category_show', {'slug': category.slug}) }}" class="category-link text-accent">{{ category.name }}</a>{% if not loop.last %} · {% endif %}
                                {% endfor %}
                            </div>
                            <div class="address mb-1 text-small">
                                 {{post.address}} · {{post.postcode}} {{post.city}}
                            </div>
                            <div class="contact mb-2 text-small">
                                {% if post.phone %}
                                    <i class="bi bi-telephone text-accent"></i>
                                    <span>
                                        {% if post.phoneLink %}
                                            <a href="tel:{{post.phoneLink}}">{{post.formatedPhone}}</a>
                                        {% else %}
                                            {{post.formatedPhone}}
                                        {% endif %}
                                    </span>
                                {% endif %}
                            </div>
                            <div class="btn-wrap">
                                <a href="{{ post.slug ? path('app_post_show_slug', {'id': post.id, 'slug': post.slug}) : path('app_post_show', {'id': post.id}) }}" class="btn btn-accent btn-sm btn-cta mt-3">посмотреть<i class="bi bi-chevron-right ms-1"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div>
                no records found
            </div>
        {% endfor %}
    </div>
</div>