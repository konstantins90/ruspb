{{ form_start(form) }}
    <div class="form-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col-md-6">
            <div>
                {{ form_row(form.name) }}
            </div>
            <div>
                {{ form_row(form.category) }}
            </div>
            <div class="address">
                <div>
                    {{ form_row(form.address) }}
                </div>
                <div class="row">
                    <div class="col-4">
                        {{ form_row(form.postcode) }}
                    </div>
                    <div class="col-8">
                        {{ form_row(form.city) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            {{ form_row(form.subname) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button class="btn">{{ button_label|default('Save') }}</button>
        </div>
    </div>
{{ form_end(form) }}
