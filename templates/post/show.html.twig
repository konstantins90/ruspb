{% extends 'base.html.twig' %}

{% block title %}{{post.name}}{% endblock %}
{% block headline %}{{post.name}}{% endblock %}
{% block description %}{{post.headline|raw}}{% endblock %}
{% block breadcrumb %}{{post.name}}{% endblock %}
{% block bgimage %}{{asset('uploads/posts/' ~ post.image)}}{% endblock %}

{% block body %}
    <div class="post-detail">
        <div class="container py-5" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-8">
                    <div class="description mb-4">
                        {{ post.description|raw }}
                    </div>

                    <div class="post-detail__address-card card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <div class="row align-items-start">
                                <div class="col-auto">
                                    <i class="bi bi-geo text-accent fs-5"></i>
                                </div>
                                <div class="col">
                                    <strong class="d-block mb-1">Адрес</strong>
                                    {{ post.address }}<br>
                                    {{ post.postcode }} {{ post.city }}
                                </div>
                            </div>
                            <div class="mt-4 pt-3 border-top border-light">
                                {{ include('post/_contact.html.twig') }}
                            </div>
                        </div>
                    </div>

                    <div class="categories mb-5">
                        {% for category in post.category %}
                            <a href="{{ path('app_category_show', {'slug': category.slug}) }}" class="category-link text-accent">{{ category.name }}</a>{% if not loop.last %} · {% endif %}
                        {% endfor %}
                    </div>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}

                    {# Отзывы: Liste bestehender Bewertungen #}
                    <section class="post-detail__reviews mb-5">
                        <h2 class="post-detail__section-title">Отзывы</h2>
                        {% if comments|length > 0 %}
                            <div class="post-detail__reviews-list">
                                {% for comment in comments %}
                                    <article class="post-detail__review-card card border-0 shadow-sm mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-2">
                                                <strong class="text-primary">{{ comment.name }}</strong>
                                                <div class="text-accent" aria-label="Оценка: {{ comment.rating }} из 5">
                                                    {% for i in 1..5 %}
                                                        <i class="bi bi-star{{ i <= comment.rating ? '-fill' : '' }}"></i>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                            <time class="text-muted small" datetime="{{ comment.createdAt|date('c') }}">{{ comment.createdAt|date('d.m.Y') }}</time>
                                            <p class="mt-2 mb-0">{{ comment.message }}</p>
                                        </div>
                                    </article>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted">Пока нет отзывов. Будьте первым!</p>
                        {% endif %}
                    </section>

                    {# Оценка: Formular zum Bewertung abgeben #}
                    <section class="post-detail__review-form">
                        <h2 class="post-detail__section-title">Оставить отзыв</h2>
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                {{ form_start(commentForm) }}
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            {{ form_row(commentForm.name) }}
                                        </div>
                                        <div class="col-md-6">
                                            {{ form_row(commentForm.rating) }}
                                        </div>
                                    </div>
                                    {{ form_row(commentForm.message) }}
                                    <button type="submit" class="btn btn-accent">Отправить</button>
                                {{ form_end(commentForm) }}
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
