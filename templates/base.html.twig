      <div class="page-header d-flex align-items-center" style="background-image: url({% block bgimage %}{{ asset('images/paderborn-banner.jpg') }}{% endblock %});">
      <div class="container position-relative">
          <div class="row d-flex justify-content-center">
          <div class="col-lg-6 text-center text-light">
              <h2>{% block headline %}{% endblock %}</h2>
              <p>{% block description %}{% endblock %}</p>
          </div>
          </div>
      </div>
      </div>
      <nav>
      <div class="container">
          <ol>
          <li><a href="{{ path('app_home') }}">Home</a></li>
          <li>{% block breadcrumb %}{% endblock %}</li>
          </ol>
      </div>
      </nav>
    </div>
    {% endblock %}
    {% block body %}{% endblock %}
