{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}
{% block headline %}Вход{% endblock %}
{% block description %}Войдите в свой аккаунт{% endblock %}
{% block breadcrumb %}Вход{% endblock %}
{% block body_class %}login-page{% endblock %}

{% block body %}
    <div class="login-page__wrap">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="login-card card border-0 shadow">
                        <div class="card-body p-4 p-md-5">
                            {% if app.user %}
                                <div class="alert alert-info mb-0">
                                    Вы вошли как {{ app.user.userIdentifier }}.
                                    <a href="{{ path('app_logout') }}" class="alert-link">Выйти</a>
                                </div>
                            {% else %}
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                <h2 class="login-card__title">Вход в аккаунт</h2>
                                <p class="text-muted small mb-4">Введите email и пароль</p>

                                <form method="post" class="login-form">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                    <div class="mb-3">
                                        <label for="username" class="form-label">Email</label>
                                        <input type="email" value="{{ last_username }}" name="_username" id="username"
                                               class="form-control" autocomplete="email" required autofocus
                                               placeholder="name@example.com">
                                    </div>
                                    <div class="mb-4">
                                        <label for="password" class="form-label">Пароль</label>
                                        <input type="password" name="_password" id="password"
                                               class="form-control" autocomplete="current-password" required
                                               placeholder="••••••••">
                                    </div>

                                    <button class="btn btn-accent w-100 py-2" type="submit">
                                        Войти
                                    </button>
                                </form>

                                <p class="mt-4 mb-0 text-center small text-muted">
                                    <a href="{{ path('app_home') }}" class="text-accent text-decoration-none">← На главную</a>
                                </p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
